<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans">

	<bean id="helloWorldBatchletSpringInjection" class="org.springframework.batch.jsr.demo.batchlet.HelloWorldBatchlet">
		<property name="greeting" value="Willkommen"></property>
	</bean>

	<job id="helloWorld" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
		<step id="step1">
			<batchlet ref="helloWorldBatchletSpringInjection"/>
		</step>
	</job>
</beans>
